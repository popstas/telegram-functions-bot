{
  "name": "telegram-functions-bot",
  "version": "2025.10.15",
  "description": "",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "desktop": "cross-env NODE_ENV=desktop electron electron/main-entry.mjs",
    "build:electron": "esbuild electron/main.ts electron/preload.js --bundle --platform=node --format=esm --outdir=dist-electron --sourcemap --external:electron",
    "build:dist": "npm run build:electron && electron-builder --config electron-builder.yml --win --x64 --publish never",
    "changelog": "npx conventional-changelog-cli -p angular -i CHANGELOG.md -s -r 0",
    "test": "node --no-warnings=ExperimentalWarning --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:coverage": "npm test -- --coverage",
    "test-full": "npm run test && npm run typecheck && npm run lint src tests",
    "coverage-info": "tsx src/utils/coverage-info.ts",
    "prepare-commit": "npm run test-full && npm run format",
    "typecheck:tsc": "tsc --noEmit",
    "typecheck": "tsgo --noEmit",
    "lint": "eslint",
    "format": "prettier -l --write \"src/**/*.{ts,js,json,md}\" \"tests/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\" \"tests/**/*.{ts,js,json,md}\"",
    "agent": "tsx src/cli-agent.ts",
    "config:convert": "tsx src/cli-config.ts",
    "healthcheck": "tsx src/healthcheck.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@agentic/core": "^8.4.3",
    "@modelcontextprotocol/sdk": "^1.15.1",
    "better-sqlite3": "^12.2.0",
    "express": "^5.1.0",
    "form-data": "^4.0.3",
    "google-auth-library": "^10.1.0",
    "googleapis": "^152.0.0",
    "https-proxy-agent": "^7.0.6",
    "js-tiktoken": "^1.0.21",
    "js-yaml": "^4.1.0",
    "langfuse": "^3.38.4",
    "lodash.debounce": "^4.0.8",
    "mqtt": "^5.13.2",
    "openai": "^5.9.0",
    "recursive-readdir": "^2.2.3",
    "sqlite-vec": "^0.1.7-alpha.2",
    "telegraf": "^4.16.3",
    "telegramify-markdown": "^1.3.0",
    "tmp": "^0.2.3",
    "tsx": "^4.20.3",
    "undici": "^7.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@jest/globals": "^30.0.0-beta.3",
    "@tsconfig/recommended": "^1.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash.debounce": "^4.0.7",
    "@types/lodash.throttle": "^4.1.7",
    "@types/node": "^24.0.13",
    "@types/tmp": "^0.2.6",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@typescript/native-preview": "^7.0.0-dev.20250806.1",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.6",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  },
  "overrides": {
    "esbuild": "^0.25.6"
  }
}
